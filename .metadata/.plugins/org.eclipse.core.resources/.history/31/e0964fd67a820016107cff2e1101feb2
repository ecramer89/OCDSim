package ocdSim;

public class ColorTexture extends Texture {
	  private int fill;
	  private PVector dimensions=new PVector();
	  
	  public ColorTexture(color fill) {
		    this.fill=fill;
		  }


	

		 
	@Override
	public void apply() {
		 pushStyle();
		    noStroke();
		    fill(fill);
		    rect(-dimensions.x/2, -dimensions.y/2, dimensions.x, dimensions.y);
		    popStyle();

	}

	@Override
	public void resize(int width, int height) {
	    dimensions.x=width;
	    dimensions.y=height;

	}

}
