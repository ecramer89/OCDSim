import java.util.*;
GameMode currentMode;
Interface interfaceMode;

OverWorld overWorld;
ModeTransitioner modeTransitioner;
int currConcernEvent;
int jewelsCollected;

FoodObjectData test;


void increaseEnergy(float amount){
  overWorld.repleteEnergy(amount);
}


void setup() {
  size(displayWidth, displayHeight, P3D);
  initialize();
  
  
  //if testing
 
}

void initialize() {
  loadAssets(); //loading the assets has to happen first
  modeTransitioner=new ModeTransitioner();
  currConcernEvent=-1;
  jewelsCollected=0;
  overWorld=new OverWorld();
  interfaceMode=new Interface();
  currentMode=interfaceMode;
  
  
  test=new FoodObjectData(getFoodType());
  interfaceMode.newFoodEncounter(test);
}

void draw() {
  currentMode.run();
}